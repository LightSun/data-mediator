<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/bt_change_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="change bg"
            tools:ignore="HardcodedText" />
        <Button
            android:id="@+id/bt_change_bg_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="change bg color"
            tools:ignore="HardcodedText" />
        <Button
            android:id="@+id/bt_change_bg_res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="change bg resource"
            tools:ignore="HardcodedText" />
    </LinearLayout>
    <Button
        android:id="@+id/bt_change_enable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="change enable state"
        tools:ignore="HardcodedText" />

    <View
        android:id="@+id/v_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/v_bg_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/v_bg_res"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/v_enable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</LinearLayout>
